@model B3.Models.ConfigModel
<!-- Modal -->
@Html.AntiForgeryToken()
<div class="modal fade" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update| Add Config</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="frmSaveData">
                    <div class="form-group">
                        <label for="txtTitle"> Tiêu Đề</label>
                        <span class="required" aria-required="true">*</span>
                        <input type="text" class="form-control" name="txtTitle" id="txtTitle">
                        <input type="hidden" id="hidID" value="0" />
                        <span class="text-danger error error-Titile"></span>
                    </div>
                    <div class="form-group">
                        <label for="txtAddress">Địa Chỉ</label>
                        <span class="required" aria-required="true">*</span>
                        <input type="text" class="form-control" name="txtAddress" id="txtAddress">
                        <span class="text-danger error error-Address"></span>
                    </div>
                    <div class="form-group">
                        <label for="txtHotLine">Hot Line</label>
                        <span class="required" aria-required="true">*</span>
                        <input type="number" class="form-control" name="txtHotLine" id="txtHotLine">
                        <span class="text-danger error error-HotLine"></span>
                    </div>
                    <div class="form-group">
                        <label for="txtOpenTime">Thời Gian Mở Cửa</label>
                        <input type="text" class="form-control" name="txtOpenTime" id="txtOpenTime">
                        <span class="text-danger error error-OpenTime"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn green" id="btnSave">Save</button>
            </div>
        </div>

    </div>
</div>
